generator client {
  provider = "prisma-client-js"
   output   = "app/generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String     @unique     @default(uuid())
  username              String
  email                 String     @unique
  password              String
  gender                String
  date_of_birth         DateTime              
  bio                   String 
  location               String
  created_at            DateTime               @default(now())               
  last_active           DateTime
  profile_pic           String
}


